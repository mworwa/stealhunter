{% extends 'base.html.twig' %}

{% block body %}
    <main class="sale-add">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-lg-12 text-center mb-5 mt-5">
                    <h2 class="mt-4 mb-4 text-white">Dodaj nowa promocję</h2>
                        <p class="description">Dodaj promocję i pomoż innym użytkowniką zaoszczędzić pieniądze</p>
                </div>
                <div class="col-lg-8">
                    {{ form_start(form) }}
                    <div class="form-group box p-5">
                        <div class="col-lg-12">
                            <label for="sale_title" class="required">Nazwa promocji</label>
                            {{ form_widget(form.title, {'attr': {'class': 'form-control mb-3'} }) }}
                        </div>
                        <div class="col-lg-12">
                            <label for="sale_description" class="required">Opis</label>
                            {{ form_widget(form.description, {'attr': {'class': 'form-control mb-3'} }) }}
                        </div>
                        <div class="col-lg-4">
                            <label for="sale_category" class="required">Kategoria</label>
                            {{ form_widget(form.category, {'attr': {'class': 'form-control mb-3'} }) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_row(form.url, {'attr': {'class': 'form-control mb-3'} }) }}
                        </div>
                        <div class="col-lg-3">
                            {{ form_row(form.submit, {'attr': {'class': 'btn text-white'} }) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>

{% endblock %}