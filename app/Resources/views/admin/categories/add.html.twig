{% extends 'admin_base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <h2 class="mt-3">Dodaj kategorie</h2>
        </div>
        <div class="row">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.name, {'attr': {'class': 'form-control'} }) }}
            </div>
            {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'} }) }}

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}